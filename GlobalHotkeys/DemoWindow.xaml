<Window x:Class="GlobalHotkeys.DemoWindow" x:Name="window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hotkeys="http://schemas.huddledmasses.org/interop/hotkeys"
    Title="GlobalHotkeys" Height="300" Width="300"
    >
   <hotkeys:HotkeyManager.HotkeyManager>
      <hotkeys:HotkeyManager>         
         <KeyBinding Command="hotkeys:GlobalCommands.ActivateWindow" Key="K"  Modifiers="Win" />
         <KeyBinding Command="hotkeys:GlobalCommands.CloseWindow"    Key="F4" Modifiers="Win" />
         <KeyBinding Command="hotkeys:GlobalCommands.ToggleWindow"   Key="S"  Modifiers="Win" />
         <!-- the next two will cause a conflict, because they use the same key :) (this is a demo) -->
         <KeyBinding Command="hotkeys:GlobalCommands.HideWindow"     Key="S"  Modifiers="Win" />
         <KeyBinding Command="hotkeys:GlobalCommands.ShowWindow"     Key="S"  Modifiers="Win" />
      </hotkeys:HotkeyManager>
   </hotkeys:HotkeyManager.HotkeyManager>
    <Grid>
        <RichTextBox Name="richTextBox1" />
    </Grid>
</Window>
